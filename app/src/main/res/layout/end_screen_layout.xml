<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <TextView
        android:textColor="@color/navBarBackground"
        android:id="@+id/result_summary"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/result_summary"
        android:textAlignment="center"
        android:textSize="36sp" />

    <ListView
        android:id="@+id/end_screen_listview"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/save_result_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/result_summary"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/save_result_button"
        android:textColor="@color/navBarBackground"
        android:background="@drawable/theme_button_background"
        android:textSize="36sp"
        android:text="@string/save_run"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>